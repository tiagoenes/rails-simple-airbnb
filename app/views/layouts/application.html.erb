<!DOCTYPE html>
<html>
  <head>
    <title>RailsSimpleAirbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'A Simple Airbnb', flats_path, class: "navbar-brand" %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="ml-auto d-flex">
          <%= form_tag(search_flats_path) do %>
          <%= text_field_tag :search %>
          <%= submit_tag 'Search', class: 'btn btn-outline-success my-2 my-sm-0' %>
          <% end %>
          <%= link_to "Reset", flats_path, class: "btn btn-outline-primary my-2 my-sm-0 ml-2"%>
          <a href="#" id="link-add" class="btn btn-outline-primary my-2 my-sm-0 ml-2" ></a>
        </div>
      </div>
    </nav>
    <%= yield %>
    <%= javascript_pack_tag 'my' %>
  </body>
</html>
